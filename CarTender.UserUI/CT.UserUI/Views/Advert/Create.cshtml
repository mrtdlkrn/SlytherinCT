
@{
    ViewBag.Title = "Yeni İlan Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/Scripts/main.js"></script>
</head>
</div>
<div class="container-fluid p-5">
    <h2 class="text-center">@ViewBag.Title</h2>

    <div class="card shadow mb-4">

        <div id="collapseOne" class="collapse show p-5" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="input-group mb-4">
                <span class="input-group-text col-md-3" id="inputGroup-sizing-default">İlan Başlığı:</span>
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="input-group mb-4">
                <span class="input-group-text col-md-3" id="inputGroup-sizing-default">İlan Açıklama:</span>
                <textarea class="form-control" id="exampleFormControlTextarea1" style="resize:none;" rows="3"></textarea>
            </div>
            <div class="input-group mb-4">
                <span class="input-group-text col-md-3" id="inputGroup-sizing-default">Araç:</span>
                <input disabled type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" value="Araç Seçiniz">
                <button class="btn btn-success col-md-3" type="submit" data-toggle="modal" data-target="#selectCarToAdvert"><i class="fa-solid fa-plus"></i> Araç Seç</button>
            </div>
            <div class="input-group mb-4">
                <span class="input-group-text col-md-3" id="inputGroup-sizing-default">Ön Değerlendirme Fiyatı:</span>
                <input type="text" class="form-control" />
                <div class="input-group-append">
                    <span class="input-group-text">TL</span>
                </div>
            </div>
            <div class="input-group mb-4">
                <span class="input-group-text col-md-3" id="inputGroup-sizing-default">Fiyatı:</span>
                <input type="text" class="form-control" />
                <div class="input-group-append">
                    <span class="input-group-text">TL</span>
                </div>
            </div>
            <div class="col-md-9 col-sm-0"></div>
            <div class="col-md-3" style="float:right;">
                <button class="btn btn-info btn-block" style="background-color: #2E86C1;" type="button"><i class="fa-solid" style="color:white;"></i>İlan Oluştur</button>
            </div>
        </div>
    </div>

</div>


<div class="modal fade" id="selectCarToAdvert" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content align-content-center" style="width:40rem">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Araç Seç</h5>
                <button class="btn btn-dark btn-circle btn-sm" type="button" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa-solid fa-x"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <div class="input-group mb-3">
                        <div class="input-group">
                            <input class="form-control mr-sm-2" type="search" placeholder="Araç Ara" aria-label="Ara">
                            <button class="btn btn-outline-success " type="submit">Ara</button>
                        </div>
                    </div>
                    <a class="btn btn-dark mt-4 mb-2" href="/Car/Create/">Yeni Araç Ekle</a> @*Geçici*@
                    <div class="input-group-prepend">
                        <div class="table-responsive">
